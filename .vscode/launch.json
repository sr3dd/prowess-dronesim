{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "drone",
            "type": "python",
            "request": "launch",
            "envFile": "${workspaceFolder}/env/drone",
            "module": "uvicorn",
            "args": [
                "src.drone.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "64004"
            ],
            "justMyCode": true
        },
        {
            "name": "dc",
