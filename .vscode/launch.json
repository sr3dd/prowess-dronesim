                "src.drone_controller.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "64001"
            ],
            "justMyCode": true
        },
        {
            "name": "ac",
            "type": "python",
            "request": "launch",
            "envFile": "${workspaceFolder}/env/ac",
            "module": "uvicorn",
            "args": [
                "src.autonomous_controller.app.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "64002"
            ],
            "justMyCode": true
        },
        {
            "name": "inf",
            "type": "python",
